<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <link rel="stylesheet" href="../estilos/Registro_Hilos_Style.css">
    <title>Registro HILOS</title>
</head>
<body>
    <div class="container">
        <div class="title">
            <div class="menu_left"><a href="Visualizar_Hilos"><input class="btn_menu" type="submit" value="REGRESAR"></a></div>
            <div class="menu_center"><a class="ugc">Hilos</a></div>
            <div class="menu_right"><a href="/logout"><input class="btn_menu" type="submit" value="LogOut"></a></div>
        </div>
        <div class="section">
            <a class="page"> REGISTRO DE HILOS</a>
        </div>
        <form action="/registro_hilos" method="post">
            <div class="fields">
                <a class="titlefield">Hilo</a>
                <div class="datet"><a>Codigo</a></div>
                <input class="datin" type="text" placeholder="Codigo.." name="codigo" id="codigo">
                <div class="datet"><a>Nombre</a></div>
                <input class="datin" type="text" placeholder="Nombre.." name="name" id="name">
                
            </div>
            <div class="button">
                <input id="reg-but"  type="submit" value="Guardar">
            </div> 
        </form>
        <div>
            
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>' ,
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton:'<%=showConfirmButton%>' ,
                timer: '<%=timer%>'
            }).then(()=>{
                window.location = 'Registro_Hilos <%= ruta%>'
            });
        </script>
    <%}%> 
    
    
</body>
</html>